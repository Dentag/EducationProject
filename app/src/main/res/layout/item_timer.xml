<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:backgroundTint="@color/light_green"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_timer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time to exams"
            android:textColor="@color/white"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_timer_days_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/item_timer_days_TV"
            app:layout_constraintEnd_toEndOf="@+id/item_timer_days_TV"
            app:layout_constraintStart_toStartOf="@+id/item_timer_days_TV"
            tools:text="00" />

        <TextView
            android:id="@+id/item_timer_days_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Days"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_timer_hours_TV"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/item_timer_hours_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/item_timer_hours_TV"
            app:layout_constraintEnd_toEndOf="@+id/item_timer_hours_TV"
            app:layout_constraintStart_toStartOf="@+id/item_timer_hours_TV"
            tools:text="00" />

        <TextView
            android:id="@+id/item_timer_hours_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Hours"
            android:textColor="@color/white"
            android:textSize="12sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_timer_minutes_TV"
            app:layout_constraintStart_toEndOf="@+id/item_timer_days_TV" />

        <TextView
            android:id="@+id/item_timer_minutes_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/item_timer_minutes_TV"
            app:layout_constraintEnd_toEndOf="@+id/item_timer_minutes_TV"
            app:layout_constraintStart_toStartOf="@+id/item_timer_minutes_TV"
            tools:text="00" />

        <TextView
            android:id="@+id/item_timer_minutes_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Minutes"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_timer_hours_TV" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>